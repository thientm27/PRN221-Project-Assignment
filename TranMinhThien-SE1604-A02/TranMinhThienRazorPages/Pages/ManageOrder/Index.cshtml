@page
@model RazorPage.Pages.ManageOrder.IndexModel

@{
    Layout = "Shared/_AdminLayout";
    ViewData["Title"] = "Index";
}

<h1>ORDER MANAGER</h1>

<p>
    <a asp-page="ShopView">Create New</a>
</p>
<form method="post" asp-page="index" asp-page-handler="search" >
    <div class="form-group">
        <label for="searchString">Search:</label>
        <input asp-for="SearchValue"  class="form-control" />
    </div>
    <button type="submit" value="Search" class="btn btn-primary" style="margin: 0 auto">Search</button>
</form>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Order[0].OrderDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Order[0].ShippedDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Order[0].Total)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Order[0].OrderStatus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Order[0].Customer)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Order)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShippedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.CustomerName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.OrderId">Edit</a> |
                <a asp-page="./OrderDetail" asp-route-id="@item.OrderId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.OrderId">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>