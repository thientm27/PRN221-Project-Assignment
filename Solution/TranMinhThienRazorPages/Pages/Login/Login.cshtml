@page
@model RazorPage.Pages.Login.IndexModel
@{
    ViewData["Title"] = "Login";
}
<div class="card w-50" style="margin:auto">
    <div class="card-header bg-info text-white" style="font-weight:bold;">
        <i class="bi bi-person-circle"></i> Login
    </div>
    <form method="post">
        <div class="card-body">
            <div class="form-group">
                <label asp-for="Customer.Email" class="control-label"></label>
                <input asp-for="Customer.Email" class="form-control"/>
                <span asp-validation-for="Customer.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Password" class="control-label"></label>
                <input asp-for="Customer.Password" class="form-control" type="password"/>
                <span asp-validation-for="Customer.Password" class="text-danger"></span>
            </div>
        </div>

        <div class="card-footer text-muted">
            <input method="post" type="submit" value="Login" class="btn btn-primary"/>
            <a asp-page="./Register">
                <i class="bi bi-check-circle" style="color:white;"></i> Register
            </a>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
    </form>
</div>